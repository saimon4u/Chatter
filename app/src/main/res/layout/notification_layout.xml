<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_100sdp"
    android:layout_margin="13.00dp"
    android:background="@drawable/border_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/not_img"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:src="@drawable/man"
                android:layout_marginStart="13dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="13dp"
                android:layout_marginBottom="@dimen/_13sdp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">


                <TextView
                    android:id="@+id/not_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_27sdp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Name"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textColor="@color/white"
                    android:textSize="23dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="14dp"
                    android:textColor="@color/white"
                    android:text="Sent you a friend request."/>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/_3sdp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/not_acceptBtn"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_35sdp"
                android:backgroundTint="#47871E"
                android:layout_marginTop="@dimen/_3sdp"
                android:text="Accept"
                android:textSize="@dimen/_13sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:textAlignment="center" />
            <Button
                android:id="@+id/not_rejectBtn"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:backgroundTint="#C61F1F"
                android:text="Reject"
                android:textSize="@dimen/_13sdp"
                android:textAlignment="center"
                android:layout_marginStart="@dimen/_10sdp"/>

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>